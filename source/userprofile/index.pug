extends /_templates/layout.pug

block content

    .container-fluid
        .form#user_profile
            h2= self.labels.login.userprofileTitle
            .form-group
                label.login_label(for='email')= self.labels.login.email
                #email(name='email')
            .form-group
                label.login_label(for='firstName')= self.labels.login.first_name
                input.login_input#firstName.form-control(type='text', placeholder="eesnimi" name='firstName' autocomplete="off" oninput="validateFirstName(this.id)")
                #firstNameHelp(class='valid')= self.labels.login.firstNameHelp
            .form-group
                label.login_label(for='lastName')= self.labels.login.family_name
                input.login_input#lastName.form-control(type='text', placeholder="perenimi" name='lastName' autocomplete="off" oninput='validateLastName(this.id)')
                #lastNameHelp(class='valid')= self.labels.login.lastNameHelp
            .form-group
                label.login_label(for='phoneNr')= self.labels.login.phone
                input.login_input#phoneNr.form-control(type='tel' placeholder="telefoni number" name='phoneNr' oninput='validatePhoneNr(this.id)' autocomplete="off")
                #phoneNrHelp(class='valid')= self.labels.login.phoneNumHelp
            a.btn.btn-primary.text-uppercase(onclick='validateForm()')= self.labels.login.save
            p#profileSent(style = {display: 'none'})= self.labels.login.dataSaved
            p#profileNotSent(style = {display: 'none'}) profiili salvestamine eba√µnnestus


    style.
        .invalid {
            background-color: #f5e4e9;
            display: block;
            color: black
            }
        .valid {
            background-color: #e6f7e6;
            display: none;
            }
        #user_profile{
            padding: 10rem 0 10rem 10rem;
            width: 50rem;
        }